
<!-- CATEGORY FILTER RESULTS ex: http://base-template.squarespace.com/blog/?category=category1 -->

{.section categoryFilter}
  <p>Filtering by Category: {@|safe}</p>
{.end}

<!-- TAG FILTER RESULTS ex: http://base-template.squarespace.com/blog/?tag=tag2 -->

{.section tagFilter}
  <p>Filtering by Tag: {@|safe}</p>
{.end}

<!-- AUTHOR FILTER RESULTS ex: http://www.base-template.com/blog?author=4f046df4d09ae2cf23d1aaa2 -->

{.if authorFilter}
  <p>Filtering by Author: {author.displayName}</p>
{.end}

<!--ITEM LOOP-->

<div class="row news-list">

{.repeated section items}

  <!--WRAPPER-->

  <article id="post-{id}" class="{@|item-classes} columns small-12 news-list__news-article" data-item-id="{id}">
    <!--MAIN IMAGE-->

    <div class="news-list__article-image">
      <a href="{fullUrl}" class="main-image content-fill">
        <img src="{assetUrl}?format=original" />
      </a>
    </div>
      

    
    <div class="news-list__article-summary">
      <!--POST TILE-->
      <h1 class="article-summary__heading heading--medium" data-content-field="title">
        {.passthrough?}
          <a href="{sourceUrl}" target="_blank">{title}</a>
        {.or}
          <a href="{fullUrl}">{title}</a>
        {.end}
      </h1>
      <p class="article-summary__timestamp text--small">
        <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time>
      </p>

      <!--EXCERPT OR BODY-->

      {.if excerpt}
        {excerpt}
        <a class="link" href="{fullUrl}">Read More</a>
      {.or}
      <p class="text--medium">
        Our new football team is the bee’s knees. Just as ferocious as you’d imagine an angry, robotic panda to be. They’re the best at what they do, and so are you! Join our team, you won’t regret it.
      </p>
      <a class="link" href="{fullUrl}">Read More</a>
    </div>
    


    {.end}

    <!--BLOG INJECTION-->

    {postItemInjectCode}

    

    <!--LINK TO COMMENTS-->

    {.comments?}
      {@|comment-link}
    {.end}

    <!--LOCATION-->

    {.section location}
      {.section addressTitle}
        {addressTitle}
        {addressLine1}
        {addressLine2}
        {addressCountry}
      {.end}
    {.end}

  </article>

  {.or}
    No blog posts yet.
{.end}

</div> <!-- end .row -->

<!--PAGINATION-->

{.if pagination}
  <nav>

    <!--NEWER PAGE-->

    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!--OLDER PAGE-->

    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
